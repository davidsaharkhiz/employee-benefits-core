@model EmployeeBenefits.Models.Employee

<div class="card mb-3">
	<form asp-controller="Employee" asp-action="input" method="post">
		<label asp-for="@Model.Name"></label>
		@Html.DisplayFor(model => model.Name)
		<input asp-for="Name" class="form-control" />
		<div>
			<span asp-validation-for="Name" class="text-warning"></span>
		</div>

		<label asp-for="@Model.NumberOfDependents"></label>
		@Html.DisplayFor(model => model.NumberOfDependents)
		<input asp-for="NumberOfDependents" class="form-control" />
		<div>
			<span asp-validation-for="NumberOfDependents" class="text-warning"></span>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>
