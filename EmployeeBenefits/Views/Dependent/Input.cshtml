@model EmployeeBenefits.ViewModels.DependentInputViewModel

<div>
	<h1>Dependent Input</h1>
</div>
<p>
	@Model.UserMessage
</p>
<div class="employee-benefits-form-wrapper">
	<form asp-controller="Dependent" asp-action="input" method="post">
		<label asp-for="@Model.Dependent.Name"></label>
		@Html.DisplayFor(model => Model.Dependent.Name)
		<input asp-for="@Model.Dependent.Name" class="form-control" />
		<div>
			<span asp-validation-for="@Model.Dependent.Name" class="text-warning"></span>
		</div>

		<label asp-for="@Model.Dependent.EmployeeDependents"></label>
		@Html.DisplayFor(model => model.Dependent.EmployeeDependents)

		@Html.DropDownListFor(model => model.Employees, Model.SelectList)

		<div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<a class="nav-link" href="@Url.Action("index", "home")">
				<button class="btn btn-info">Skip</button>
			</a>
		</div>
	</form>
</div>
